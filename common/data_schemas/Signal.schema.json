{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Signal",
  "type": "object",
  "properties": {
    "instrument_id": {
      "type": "string"
    },
    "side": {
      "type": "string",
      "enum": [
        "BUY",
        "SELL",
        "HOLD"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "rationale": {
      "type": "string"
    },
    "ttl_days": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "instrument_id",
    "side",
    "confidence",
    "rationale",
    "ttl_days"
  ]
}